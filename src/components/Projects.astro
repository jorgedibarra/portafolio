---
import GitHub from "./icons/Github.astro";
import Spring from "./icons/Spring.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import ProjectPill from "./ProjectPill.astro";
import Java from "./icons/Java.astro";
import React from "./icons/React.astro";

const PROJECTS = [
  {
    title: "InventoryMotor",
    description:
      "Sitio web para llevar la gestion del inventario en una empresa que vende repuestos para motos, se puede llevar un control de las existencias, las ventas y los pedidos.",
    link: "https://jorgedibarra.github.io/inventario-front/",
    github: "https://github.com/jorgedibarra/Inventory-Motor",
    image: "../../public/projects/inventoryMotor.png",
  },
  {
    title: "Gestor de tareas",
    description:
      "Sitio web para llevar la gestión eficiente de tareas académicas dentro de un entorno institucional. Utiliza una arquitectura en capas que mejora la escalabilidad, el mantenimiento y la seguridad del sistema.",
    link: "https://jorgedibarra.github.io/inventario-front/",
    github: "https://github.com/jorgedibarra/Inventory-Motor",
    image: "../../public/projects/proximamente.webp",
  },
];
---
<div class="flex flex-col space-y-16">
{
  PROJECTS.map(({ title, description, image, github, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
      <div class="w-full md:w-1/2">
        <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
          <img
            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
            loading="lazy"
            src={image}
            alt={`Captura de pantalla del proyecto ${image}`}
          />
        </div>
      </div>
      <div class="w-full md:w-1/2 md:max-w-lg">
        <h3 class="text-2xl font-semibold text-green-300 mb-2">{title}</h3>
        <div class="flex flex-wrap mt-2">
          <ul class="flex gap-x-4 flex-row">
            <ProjectPill>
              <Java class="size-2 md:size-4" />
              <li>Java</li>
            </ProjectPill>
            <ProjectPill>
              <Spring class="size-2 md:size-4" />
              <li>Spring Boot</li>
            </ProjectPill>
            <ProjectPill>
              <React class="size-2 md:size-4" />
              <li>React</li>
            </ProjectPill>
          </ul>
          <div class="mt-2 text-gray-200">{description}</div>
          <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHub class="size-6" />
                Codigo
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <Link class="size-4" />
                Vista previa
              </LinkButton>
            )}
          </footer>
        </div>
      </div>
    </article>
  ))
}
</div>
